<?xml version="1.0" encoding="UTF-8"?>
<page xmlns="http://jboss.com/products/seam/pages"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://jboss.com/products/seam/pages http://jboss.com/products/seam/pages-2.2.xsd"
      no-conversation-view-id="/EspecieList.xhtml"
      login-required="true">
<restrict>#{identity.loggedIn and s:hasRole('Gerente')}</restrict>
   <begin-conversation join="true" flush-mode="MANUAL"/>

   <action execute="#{especieHome.wire}"/>

   <param name="especieFrom"/>
   <param name="especieIdEspecie" value="#{especieHome.especieIdEspecie}"/>


   <navigation from-action="#{especieHome.persist}">
      <rule if-outcome="persisted">
         <end-conversation/>
         <redirect view-id="/Especie.xhtml"/>
      </rule>
   </navigation>

   <navigation from-action="#{especieHome.update}">
      <rule if-outcome="updated">
         <end-conversation/>
         <redirect view-id="/Especie.xhtml"/>
      </rule>
   </navigation>

   <navigation from-action="#{especieHome.remove}">
      <rule if-outcome="removed">
         <end-conversation/>
         <redirect view-id="/EspecieList.xhtml"/>
      </rule>
   </navigation>

</page>
